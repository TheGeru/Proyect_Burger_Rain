<%- include("../templates/MenuAdmin") %>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Cherry+Bomb+One&family=Prompt:wght@700&display=swap');

    .text-document{
        font-family: 'Prompt', sans-serif;
        color: rgb(0, 0, 0);
    }

    .text-sub-document{
        font-family: 'Prompt', sans-serif;
        color: rgb(0, 0, 0);
    }
</style>
<div class="container mt-5">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1 class="text-document">Productos de BURGER RAIN</h1>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Status</th>
                            <th>Descripcion</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Foto</th>
                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                        productos.forEach((producto)=>{
                        %>
                        <tr>
                            <td><%= producto.id %></td>
                            <td><%= producto.status %></td>
                            <td><%= producto.descripcion %></td>
                            <td><%= producto.nombre %></td>
                            <td><%= producto.precio %></td>
                            <td><img
                                width="150px"
                                height="150px"
                                src="/uploadsProducts/<%= producto.foto %>"
                                alt="Foto de <%= productos.nombre %>"
                              /></td>
                            <td>
                                <a href="/editarPR/<%= producto.id %>">Editar</a>
                            </td>
                            <td>
                                <a href="/borrarPr/<%= producto.id %>">Eliminar</a>
                            </td>
                        </tr>
                        <%
                        });
                        %>
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>

<%- include("../templates/pie") %>